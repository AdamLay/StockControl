extends ../layout

block content

    .row
        .col-md-4.col-sm-6.col-center
            form.form-signin
                h2.form-signin-heading Register Account
                .form-group
                    label.control-label(for="email") Username
                    input.form-control(type="text", id="email", placeholder="Username", required, autofocus)
                .form-group
                    label.control-label(for="password") Password
                    input.form-control(type="password", name="password", id="password1", placeholder="Password", required)
                .form-group
                    label.control-label(for="password") Confirm Password
                    input.form-control(type="password", name="passwordConfirm" id="password2", placeholder="Password", required)
                .form-group
                    input#btnSubmit.btn.btn-primary(type="submit", value="Register")
